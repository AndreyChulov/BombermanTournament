<UserControl x:Class="TournamentServer.Controls.ClientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TournamentServer.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Name="ClientInfoControl"
             d:DataContext="{d:DesignInstance local:ClientInfoDesignContext, IsDesignTimeCreatable=True}"
             DataContext="{Binding ElementName=ClientInfoControl}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Label Content="{Binding Title}" HorizontalAlignment="Center"></Label>
        </Grid>
        <Grid Row="1">
            
        </Grid>
    </Grid>
</UserControl>
